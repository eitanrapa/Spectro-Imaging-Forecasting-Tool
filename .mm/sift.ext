# naming seed
sift.ext.stem := sift
# its location
sift.ext.root := ext/

# these are bindings for
sift.ext.wraps := sift.lib
# built with pybind11
sift.ext.capsule :=
# dependencies on external packages
sift.ext.extern := sift.lib pyre pybind11 python gsl
# compiler control
sift.ext.lib.c++.flags += $($(compiler.c++).std.c++20)


# end of file
