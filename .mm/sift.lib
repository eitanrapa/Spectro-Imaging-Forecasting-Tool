# configuration for libsift
sift.lib.stem := sift
# its location
sift.lib.root := lib/sift/
# dependencies on external packages
sift.lib.extern := pyre gsl

# use c++20
sift.lib.c++.flags += $($(compiler.c++).std.c++20)

# the autogen files
sift.lib.headers.autogen := version.h.in
# the expansion table
sift.lib.autogen = \
    @MAJOR@|$(sift.major)\
    @MINOR@|$(sift.minor) \
    @MICRO@|$(sift.micro) \
    @REVISION@|$(sift.revision) \


# end of file
